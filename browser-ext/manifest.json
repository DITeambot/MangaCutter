{
  "manifest_version": 2,
  "name": "MangaCutter Browser adapter",
  "version": "1.0",
  "description": "Add-on for MangaCutter capabilities extension",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.svg",
      "38": "icons/icon.svg"
    },
    "default_title": "MangaCutter",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "cookies",
    "proxy",
    "privacy"
  ],
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "incognito": "spanning",
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://example.com/updates.json",
      "id": "{340f1970-c458-40cc-a39e-3d978f843f4e}"
    }
  }
}
